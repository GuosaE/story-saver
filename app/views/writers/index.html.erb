    <tr>
      <th>Writer(s)</th>
      <br>
      <th>Article Title</th>
    </tr>
  </thead>

  <tbody>
    <% @writers.ordered_by_name.each do |writer| %>
        <tr>
        <td style="text-align:center"><%= writer.name %></td>
        <td style="text-align:center">
          <% @articles.each do |article| %>
              <% if article.writer_id == writer.id %>
                  <%= article.title %>
              <% end %>
          <% end %>
        </td>
        </tr>
    <% end %>
  </tbody>

    </tr>
  </thead>
</table>


