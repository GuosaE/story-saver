<%= form_with(model: note, local: true) do |form| %>
    <% if note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
  
        <ul>
          <% note.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :Name %>
      <%= form.text_field :name %>
    </div>
    <br>
  
    <div class="field">
      <%= form.label :Information %>
      <%= form.text_area :information %>
    </div>
    <br>

    <div class="field">
      <%= form.label :Subject %>
      <%= form.text_field :subject %>
    </div>
    <br>
  
    <div class="field">
      <%= form.label :Category %>
      <%= form.text_area :category %>
    </div>
    <br>
  
    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>