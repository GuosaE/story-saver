<div align="center"><nav id="countries-back-to-home-link"><%= link_to 'Back to Home', home_index_path %></nav>
<br>

<h2 id="countries-header">Countries</h2>

<% @countries.each do |country| %>
    <p><strong>Country:</strong> <%= country.name %></p>  
    <p><strong>Region:</strong> <%= country.region.name %></p>
    <%= link_to 'Show', region_country_path(country.region, country) %>
    <br>
    <%= link_to 'Edit', edit_region_country_path(country.region, country) %>
    <br>
    <%= link_to 'Delete', country, method: :delete, data: { confirm: 'Are you sure you want to remove this country?' } %>
    <br>
<% end %></div>