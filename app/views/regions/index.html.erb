<div align="center"><h2><u>Regions</u></h2>

<br>
<br>
<%= link_to 'Add New Region', new_region_path %>
<br>
<br>

<% @regions.each do |region| %>
    <p><strong>Region:</strong> <%= region.name %></p> 
    <%= link_to 'Show', region %>
    <%= link_to 'Edit', edit_region_path(region) %>
    <%= link_to 'Delete', region, method: :delete, data: { confirm: 'Are you sure you want to remove this region?' } %>
<% end %></div>