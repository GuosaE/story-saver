<style type="text/css">
  table, td, th {
    border: 1px solid black;
    border-collapse: collapse;
    width: 800px;
    padding: 0 30px;
  }
</style>

<div align="center"><h1><u>Articles</u></h1></div>

<div align="left"><%= link_to 'Create New Article', new_article_path %></div> 
<div align="right"><%= link_to 'Back to Home', home_index_path %></div>
<br>
<div align="center">
<table>
  <thead>
    <tr>
      <th>Author(s)</th>
      <th>Title</th>
      <th>Description</th>
      <th>URL</th>
      <th>Image</th>
      <th>Publication Date</th>
      <th>Content</th>
      <th>Source</th>
      <th>Country</th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.author %></td> 
        <td><%= article.title %></td>
        <td><%= truncate(article.description, length: 300) %></td>
        <td><%= link_to article.url, "#{article.url}" %></td>
        <td><%= image_tag(article.urlToImage, :size => "200x150", :crop => :fill) %></td>
        <td><%= article.publishedAt %></td>
        <td><%= article.content %></td>
        <td><%= article.source_name %></td>
        <td><%= article.country.name %></td>
        <td>
          <ul>
            <%= link_to 'Show', article %>
            <%= link_to 'Edit', edit_article_path(article) %>
            <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table></div>